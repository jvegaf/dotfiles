        "niri/window"
    ],
    "modules-center": [
        //"power-profiles-daemon",
        //"river/tags",
        "niri/workspaces"
    ],
    "modules-right": [
        //"idle_inhibitor",
        //"cpu",
        //"memory",
        "custom/pacman",
        "temperature",
        "backlight",
        //"keyboard-state",
        "battery",
        "battery#bat2",
        //"network",
        "pulseaudio",
        "clock",
        "tray",
        "custom/power"
