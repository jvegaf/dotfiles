        "exec-if": "exit 0",                  // always run; consider advanced run conditions
        //"on-click": "foot 'sudo pacman -Syu'; foot 'sudo flatpak update'; pkill -SIGRTMIN+8 waybar", // update system
        "on-click": "foot $HOME/.config/river/upgrades.sh; pkill -SIGRTMIN+8 waybar", // update system
        "signal": 8
    },
