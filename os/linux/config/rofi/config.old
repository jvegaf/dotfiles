configuration {
  modes: "window,run,ssh,drun";
  sorting-method: "normal";
  show-icons:true;
  matching: "regex";
  drun-match-fields: "name";
  display-run: "Menu:";
  display-ssh: "SSH:";
  display-drun: "Apps:";
  display-window: "Windows:";
  font: "Maple Mono 14";
}

//@theme "colors"

* {
  background-color: transparent;
  text-color:       @foreground;

  margin:  0px;
  padding: 0px;
  spacing: 0px;
}

window {
  location:      center;
  width:         800;
  y-offset:      -20;
  border-radius: 8px;

  border:           2px;
  border-color:     @color2;
  background-color: @background;
}

mainbox {
  padding: 12px;
}

inputbar {
  background-color: @background;
  border-color:     @color2;
  border-radius: 8px;
  border:        2px;

  padding:  8px 16px;
  spacing:  8px;
  children: [ prompt, entry ];
}

prompt {
  text-color: @color1;
}

entry {
  placeholder:       "Search";
  placeholder-color: @foreground;
}

message {
  margin:           12px 0 0;
}
/*---------------------------------*\
         Configuration Section
\*---------------------------------*/
configuration {
    show-icons:                 false;
}

/*---------------------------------*\
         Global Properties Section
\*---------------------------------*/
* {
    font:                        "JetBrains Mono Nerd Font 11";
    background:                  #282738;
    background-alt:              #282738;
    foreground:                  #D8DEF5;
    selected:                    #A491AD;
    active:                      #A893D4;
    urgent:                      #91B1F0;
}

/*
USE_BUTTONS=YES
*/

/*---------------------------------*\
         Main Window Section
\*---------------------------------*/
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       800px;
    x-offset:                    0px;
    y-offset:                    0px;

    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @selected;
    cursor:                      "default";
    background-color:            @background;
}

/*---------------------------------*\
         Main Box Section
\*---------------------------------*/
mainbox {
    enabled:                     true;
    spacing:                     0px;
    margin:                      0px;
    padding:                     0px;
    border:                      0px solid;
    border-radius:               0px;
    border-color:                @selected;
    background-color:            transparent;
    background-image:            url("~/.config/rofi/images/power.png", width);
    children:                    [ "inputbar", "listview", "message"];
}

/*---------------------------------*\
         Inputbar Section
\*---------------------------------*/
inputbar {
    enabled:                     true;
    spacing:                     20px;
    padding:                     1px 4px;
    background-color:            transparent;
    children:                    [ "textbox-prompt-colon", "dummy","prompt"];
}

dummy {
    background-color:            transparent;
}

textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    str:                         "ó°”Ž Themes";
    padding:                     12px;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  @foreground;
}
prompt {
    enabled:                     true;
    padding:                     10px;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  @foreground;
}

/*---------------------------------*\
         Listview Section
\*---------------------------------*/
listview {
    enabled:                     true;
    columns:                     3;
    lines:                       2;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               false;

    spacing:                     15px;
    margin:                      15px;
    padding:                     60px 30px 20px;
    background-color:            transparent;
    cursor:                      "default";
}

/*---------------------------------*\
         Elements Section
\*---------------------------------*/
element {
    enabled:                     true;
    padding:                     28px 10px;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  @foreground;
    cursor:                      pointer;

}
element-text {
    font:                        "JetBrains Mono Nerd Font 15";
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}
element selected.normal {
    background-color:            @selected;
    text-color:                  var(background);
}

/*---------------------------------*\
         Message Section
\*---------------------------------*/
message {
    enabled:                     true;
    margin:                      0px 15px 15px 15px;
    padding:                     15px;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  @foreground;

}
textbox {
    background-color:            inherit;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
    border-radius:    8px;
}

@theme "/usr/share/rofi/themes/Monokai.rasi"
